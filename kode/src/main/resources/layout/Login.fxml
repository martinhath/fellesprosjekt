<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fellesprosjekt.gruppe24.client.controllers.LoginController">
   <top>
      <Label text="Login" BorderPane.alignment="TOP_LEFT">
         <font>
            <Font size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TextField fx:id="usernameField" onKeyPressed="#keyPressed" GridPane.columnIndex="1" />
            <PasswordField fx:id="passwordField" onKeyPressed="#keyPressed" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Brukernavn:" />
            <Label text="Passord:" GridPane.rowIndex="1" />
            <Label fx:id="status_txt" text="" textFill="#CC0000" GridPane.columnSpan="2" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </center>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <bottom>
      <Button alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#loginClick" text="OK" BorderPane.alignment="CENTER_RIGHT" />
   </bottom>
</BorderPane>
