<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="300" prefWidth="250" stylesheets="@../style/style.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            styleClass="root"
            fx:controller="org.fellesprosjekt.gruppe24.client.controllers.NotificationController">
    <top>
        <Label fx:id="newMessageLabel" styleClass="label"
               text="Nye meldinger:" BorderPane.alignment="TOP_LEFT" />
    </top>
    <center>
        <ScrollPane>
            <content>
                <ListView fx:id="listView" BorderPane.alignment="CENTER"/>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <Pane styleClass="meeting-detail-bottom" >
            <Button fx:id="abortButton" onAction="#clickAbort" mnemonicParsing="false" text="Avbryt"
                    alignment="BOTTOM_RIGHT" styleClass="button-"  />
        </Pane>
    </bottom>
</BorderPane>
